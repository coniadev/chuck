{
    "name": "conia/chuck",
    "description": "A lightweight PHP framework",
    "keywords": [
        "framework",
        "micro",
        "api",
        "router"
    ],
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9",
        "pestphp/pest": "^1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "sirbrillig/phpcs-variable-analysis": "^2.11",
        "vimeo/psalm": "^5.0.0-beta1"
    },
    "require": {
        "php": ">=8.1",
        "tgalopin/html-sanitizer": "^1.5",
        "psr/log": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Chuck\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chuck\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
